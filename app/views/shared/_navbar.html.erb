<% unless @no_navbar %>
    <% if current_user.is_midwife %>
      <div class="navbar-fymw" id="navbar-midwife">
        <%= link_to bookings_path do %>
          <i class="fa-solid fa-user-check" class="icon"></i>
        <% end  %>
        <%= link_to calendar_path do %>
          <i class="fa-solid fa-calendar-check" class="icon"></i>
        <% end %>
          <%= link_to midwives_path do %>
        <i class="fa-solid fa-house"></i>
          <% end %>
        <i class="fa-solid fa-comment"></i>
        <div class="dropup">
          <i class="fa-solid fa-gear" data-bs-toggle="dropdown" aria-expanded="false"></i>
          <ul class="dropdown-menu">
            <li><%= button_to "Log out", destroy_user_session_path, method: :delete, data: {turbo: false}%></li>
            <li><%= button_to 'Profile', midwife_path(current_user.midwife), method: :get, data: {turbo: false} %></li>
          </ul>
        </div>
      </div>
    <% else %>
      <div class="navbar-fymw" id="navbar-mom">
        <%= link_to search_path do %>
          <i class="fa-solid fa-magnifying-glass"></i>
        <% end %>
        <%= link_to bookings_path do %>
          <i class="fa-solid fa-calendar-check"></i>
        <% end %>
        <%= link_to moms_path do %>
          <i class="fa-solid fa-house"></i>
        <% end %>
        <i class="fa-solid fa-comment"></i>
        <div class="dropup">
          <i class="fa-solid fa-gear" data-bs-toggle="dropdown" aria-expanded="false"></i>
          <ul class="dropdown-menu">
            <%= button_to "Log out", destroy_user_session_path, method: :delete, data: {turbo: false}%>
            <%= link_to 'Profile,', mom_path(current_user.mom) %>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
