<% unless @no_navbar %>
    <% if current_user.is_midwife? %>
      <div class="navbar-fymw" id="navbar-midwife">
        <%= link_to bookings_path do %>
          <i class="fa-solid fa-user-check icon-navbar"></i>
        <% end  %>
        <%= link_to calendar_path do %>
          <i class="fa-solid fa-calendar-check icon-navbar"></i>
        <% end %>
          <%= link_to midwives_path do %>
        <i class="fa-solid fa-house icon-navbar"></i>
          <% end %>
        <%= link_to chatrooms_path do %>
          <i class="fa-solid fa-comment icon-navbar"></i>
        <% end %>
        <div class="dropup">
          <i class="fa-solid fa-gear icon-navbar" data-bs-toggle="dropdown" aria-expanded="false"></i>
          <div class="dropdown-menu dropdown-fix">
            <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete} %>
            <%= link_to 'Profile', midwife_path(current_user.midwife), class: "dropdown-item" %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="navbar-fymw" id="navbar-mom">
        <%= link_to search_path do %>
          <i class="fa-solid fa-magnifying-glass icon-navbar"></i>
        <% end %>
        <%= link_to bookings_path do %>
          <i class="fa-solid fa-calendar-check icon-navbar"></i>
        <% end %>
        <%= link_to moms_path do %>
          <i class="fa-solid fa-house icon-navbar"></i>
        <% end %>
        <%= link_to chatrooms_path do %>
          <i class="fa-solid fa-comment icon-navbar"></i>
        <% end %>
        <div class="dropup">
          <i class="fa-solid fa-gear icon-navbar" data-bs-toggle="dropdown" aria-expanded="false"></i>
          <ul class="dropdown-menu">
            <%= button_to "Log out", destroy_user_session_path, method: :delete, data: {turbo: false} %>
            <%= button_to 'Profile', mom_path(current_user.mom), method: :get, data: {turbo: false} %>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
