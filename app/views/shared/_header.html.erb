<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag "https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/logo.png" %>
    <% end %>


    <div class="" id="navbarSupportedContent">
      <% if user_signed_in? %>
        <div id="right-header" class="image-cropper">
          <% if current_user.is_midwife? %>
            <%= cl_image_tag current_user.midwife.photo.key, class: "avatar-small"%>
          <% else %>
            <%= cl_image_tag current_user.mom.photo.key, class: "avatar-small"%>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
