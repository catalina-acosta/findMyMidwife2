<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
    <% if user_signed_in? && current_user.try(:is_midwife?) %>
      <%= image_tag("logopink.png") %>
    <% else %>
      <%= image_tag("logoblue.png") %>
    <% end %>
    <% end %>

    <div class="" id="navbarSupportedContent">
      <% if user_signed_in? %>
        <div id="right-header" class="image-cropper">
          <% if current_user.try(:is_midwife?) %>
            <% if current_user.midwife && current_user.midwife.photo.attached? %>
              <%= cl_image_tag current_user.midwife.photo.key, class: "avatar-small" %>
            <% end %>
          <% else %>
            <% if current_user.mom && current_user.mom.photo.attached? %>
              <%= cl_image_tag current_user.mom.photo.key, class: "avatar-small-blue" %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
