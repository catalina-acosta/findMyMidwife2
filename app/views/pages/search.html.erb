<div class="container">
  <% if @midwives.empty? %>
    <div>
      <p>There are no midwives currently available</p>
    </div>
  <% else %>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#filter">
      Filters
    </button>
      <div class="modal fade" id="filter" tabindex="-1" aria-labelledby="filter" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div data-controller="filter-midwives">
                <%= form_tag search_path, { method: :get } do %>
                  <% Midwife::SPECIALITIES.each do |speciality| %>
                    <%= check_box_tag 'selected_specialities[]', speciality %>
                    <%= label_tag(speciality) %>
                  <% end %>
                  <%= submit_tag  %>
                <% end %>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary">Search by filters</button>
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    <% @midwives.each do |midwife| %>
      <div class="outer-card mt-3" data-filter-midwives-target="list">
        <div class="inner-card" id="mom-card">
          <h5 class="card-title"> <%= cl_image_tag midwife.photo.key, class: "avatar-large"%> <%= midwife.user.first_name %> <%= midwife.user.last_name %></h5>
          <p class="card-text">Speciality: <%= midwife.speciality %> </p>
          <p> Experience: <%= midwife.years_experience %> years</p>
          <p><%= link_to 'Send Request', midwife_bookings_path(midwife),  data: {turbo_method: :post}, class: 'btn btn-primary' %>     <%= link_to 'View Profile', midwife_path(midwife) , class: "btn btn-primary" %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
