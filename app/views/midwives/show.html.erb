<div class="container">
  <div class="outer-card align-items-center">
    <div class="inner-card" id="mom-card">
      <div class="d-flex align-items-center">
      <h2><%= @midwife.user.first_name %><%= @midwife.user.last_name %></h2>
      <%= cl_image_tag @midwife.photo.key, class: "avatar-large"%>
      </div>
      <p>Available from: <%= @midwife.availability.strftime("%d/%m/%Y")%></p>
      <p>Speciality: <%= @midwife.speciality%></p>
      <%= link_to 'Send Request', midwife_bookings_path(@midwife),  data: {turbo_method: :post}, class: 'btn btn-primary' %>
      <%= link_to 'Back', search_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
