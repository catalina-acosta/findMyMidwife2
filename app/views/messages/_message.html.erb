<% if current_user == message.user %>
  <div class="message-bubble-user" id="message <%= message.id %>">
    <p><%= message.content %></p>
    <small><i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i></small>
  </div>
<% else %>
  <div class="message-bubble" id="message <%= message.id %>">
    <small>
      <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
      <strong><%= message.user.first_name %></strong>
    </small>
    <p><%= message.content %></p>
  </div>
<% end %>
